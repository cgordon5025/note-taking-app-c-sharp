@model TodoItem

<form asp-action="Insert" id="form-action" method="post" role="form">
    <div class="row justify-content-center"asp-validation-summary="All">
        <label class="col-xl-6 col-lg-8 col-md-8 col-sm-10" asp-for="Name"></label>
        <input asp-for="Id" type="hidden" />
       <input asp-for="Name"/>
       <span asp-validation-for="Name"></span>
    </div>
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
            <input type="submit" id="form-button" value="Add Todo" />
        </div>
    </div>
</form>